#!/usr/bin/env bash

set -o pipefail
SCRIPT_DIR="$(cd "${BASH_SOURCE[0]%/*}" || exit 1; pwd)"
source "${SCRIPT_DIR}/../../bash_modules/terminal.sh"

log_title "[g]it [d]iff [path]"
git status

[[ "${1}" == "-h" || "${1}" == "--help" ]] && exit 1

if [[ $# -lt 1 ]]; then
  log_message "❯ git diff"
  if git diff --quiet; then
    log_message "No unstaged changes found. Checking staged changes..."
    log_message "❯ git diff --staged"
    git diff --staged
  else
    git diff
  fi
  exit 0
fi

log_message "❯ git diff ${*}"
if git diff --quiet -- "${@}"; then
  log_message "No unstaged changes found for '${*}'. Checking staged changes..."
  log_message "❯ git diff --staged ${*}"
  git diff --staged -- "${@}"
else
  git diff -- "${@}"
fi
