#!/usr/bin/env bash

set -o pipefail
SCRIPT_DIR="$(cd "${BASH_SOURCE[0]%/*}" || exit 1; pwd)"
source "${SCRIPT_DIR}/../../bash_modules/terminal.sh"

log_title "[g]it [c]ommit --message [message]"

[[ $# -lt 1 ]] && log_error "Commit message is required." && exit 1

log_message "‚ùØ git commit --message \"${*}\""
git commit --message "${*}"
