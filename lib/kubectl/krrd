#!/usr/bin/env bash

set -o pipefail
SCRIPT_DIR="$(cd "${BASH_SOURCE[0]%/*}" || exit 1; pwd)"
source "${SCRIPT_DIR}/../../bash_modules/terminal.sh"

log_title "[k]ubectl [r]ollout [r]estart [d]eployment [deployment-name]"

[[ $# -ne 1 || "${1}" == "-h" || "${1}" == "--help" ]] && exit 1

log_message "‚ùØ kubectl rollout restart deployment/${1}"
kubectl rollout restart "deployment/${1}"
watch kubectl get pods
kubectl get pods
