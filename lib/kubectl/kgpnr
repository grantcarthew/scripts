#!/usr/bin/env bash

set -o pipefail
SCRIPT_DIR="$(cd "${BASH_SOURCE[0]%/*}" || exit 1; pwd)"
source "${SCRIPT_DIR}/../../bash_modules/terminal.sh"

log_title "[k]ubectl [g]et [p]ods all namespaces [n]ot [r]unning"

[[ $# -gt 0 ]] && exit 1

log_message "‚ùØ kubectl get pods --all-namespaces --field-selector=status.phase!=Running"
kubectl get pods --all-namespaces --field-selector=status.phase!=Running
