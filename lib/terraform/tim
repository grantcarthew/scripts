#!/usr/bin/env bash

set -o pipefail
SCRIPT_DIR="$(cd "${BASH_SOURCE[0]%/*}" || exit 1; pwd)"
source "${SCRIPT_DIR}/../../bash_modules/terminal.sh"

log_title "[t]erraform [i]mport <resource> <id>"

[[ "${#}" -ne 2 || "${1}" == "-h" || "${1}" == "--help" ]] && exit 1

log_message "‚ùØ terraform import ${1} ${2}"
terraform import "${1}" "${2}"
