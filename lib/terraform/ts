#!/usr/bin/env bash

set -o pipefail
SCRIPT_DIR="$(cd "${BASH_SOURCE[0]%/*}" || exit 1; pwd)"
source "${SCRIPT_DIR}/../../bash_modules/terminal.sh"

log_title "[t]erraform [s]how"

[[ "${#}" -gt 0 ]] && exit 1

log_message "Terraform Version: $(terraform version -json | jq -r '.terraform_version')"
log_message "‚ùØ terraform show"
terraform show
