#!/usr/bin/env bash

set -o pipefail
SCRIPT_DIR="$(cd "${BASH_SOURCE[0]%/*}" || exit 1; pwd)"
source "${SCRIPT_DIR}/../../bash_modules/terminal.sh"

log_title "[t]erraform [i]nit & [p]lan"

[[ "${#}" -gt 0 ]] && exit 1

log_message "❯ terraform init -upgrade"
terraform init -upgrade
log_message "❯ terraform plan"
terraform plan
