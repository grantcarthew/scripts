#!/usr/bin/env bash

source "$(cd "${BASH_SOURCE[0]%/*}" || exit 1; pwd)/init.sh"

log_tf_title "[t]erraform [p]lan"

[[ "${#}" -gt 0 ]] && exit 1

PLAN_FILE="$(new_tf_plan_file)"

log_message "Saving plan to '${PLAN_FILE}'"
log_message "‚ùØ terraform plan -out='${PLAN_FILE}'"

terraform plan -out="${PLAN_FILE}"

log_message "\nTo apply this plan, run: terraform apply '${PLAN_FILE}'"
